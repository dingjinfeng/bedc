<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseDialog" parent="Theme.Material3.Light.Dialog.Alert">
        <!-- transparent background-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Presentation" parent="AppTheme">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="BaseDialog.Progress">
        <!--dialog background light-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="BaseDialog.Edit">
        <!--show soft keyboard-->
        <item name="android:windowSoftInputMode">stateVisible</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BottomDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_up_in</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out</item>
    </style>


    <style name="KeyboardButton" parent="Widget.Material3.Button">
        <item name="android:layout_margin">@dimen/base_keyboard_button_space</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/base_primaryText</item>
        <item name="android:textSize">@dimen/base_primaryTextSize</item>
        <item name="backgroundTint">@color/base_keyboard_button_tint</item>
        <item name="cornerRadius">@dimen/base_keyboard_button_corner</item>
        <item name="android:textAppearance">@android:style/Widget.TextView</item>
    </style>

    <style name="KeyboardPrimaryButton" parent="Widget.Material3.Button">
        <item name="android:layout_margin">@dimen/base_keyboard_button_space</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">@dimen/base_primaryTextSize</item>
        <item name="cornerRadius">@dimen/base_keyboard_button_corner</item>
        <item name="android:textAppearance">@android:style/Widget.TextView</item>
    </style>

    <style name="KeyboardImage" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:layout_margin">@dimen/base_keyboard_button_space</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/base_keyboard_button_tint</item>
        <item name="cornerRadius">@dimen/base_keyboard_button_corner</item>
        <item name="iconTint">@color/base_primaryText</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/dp32</item>
    </style>
</resources>