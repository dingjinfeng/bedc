<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_underBackground"
    android:columnCount="3"
    android:minHeight="@dimen/base_keyboard_simple_height"
    android:padding="@dimen/base_keyboard_padding"
    android:rowCount="4">


    <!--===============Row 1===================-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/key1"
        style="@style/KeyboardButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="@string/base_keyboard_key_1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/key2"
        style="@style/KeyboardButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="@string/base_keyboard_key_2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/key3"
        style="@style/KeyboardButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="@string/base_keyboard_key_3" />

    <!--===============Row 2===================-->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/key4"
        style="@style/KeyboardButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="@string/base_keyboard_key_4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/key5"
        style="@style/KeyboardButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="@string/base_keyboard_key_5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/key6"
        style="@style/KeyboardButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="@string/base_keyboard_key_6" />


    <!--===============Row 3===================-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/key7"
        style="@style/KeyboardButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="@string/base_keyboard_key_7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/key8"
        style="@style/KeyboardButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="@string/base_keyboard_key_8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/key9"
        style="@style/KeyboardButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="@string/base_keyboard_key_9" />

    <!--===============Row 4===================-->
    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="@dimen/base_keyboard_button_space"
        app:cardBackgroundColor="@color/base_background"
        app:cardCornerRadius="@dimen/base_keyboard_button_corner" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/key0"
        style="@style/KeyboardButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="@string/base_keyboard_key_0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/keyBack"
        style="@style/KeyboardImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        app:icon="@drawable/base_keyboard_backspace" />
</GridLayout>