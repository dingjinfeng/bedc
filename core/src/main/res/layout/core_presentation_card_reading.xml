<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/dp300"
        android:layout_height="@dimen/dp300"
        android:layout_centerInParent="true"
        style="@style/Widget.Material3.CardView.Filled"
        app:cardBackgroundColor="@color/base_translucent"
        app:cardCornerRadius="@dimen/dp30">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:lottie_imageAssetsFolder="@string/core_lottie_assets_folder"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                app:lottie_speed="2"
                app:lottie_rawRes="@raw/lottie_card_reading" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp32"
                android:text="@string/core_presentation_reading"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>