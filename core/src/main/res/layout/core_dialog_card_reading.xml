<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/core_card_reading_dialog_size"
        android:layout_height="@dimen/core_card_reading_dialog_size"
        android:layout_centerInParent="true"
        style="@style/Widget.Material3.CardView.Filled"
        app:cardBackgroundColor="@color/base_light_translucent"
        app:cardCornerRadius="@dimen/dp16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:lottie_imageAssetsFolder="@string/core_lottie_assets_folder"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                app:lottie_speed="2"
                app:lottie_rawRes="@raw/lottie_card_reading" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/core_presentation_reading"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp12"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>