<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="?android:attr/selectableItemBackground"    android:orientation="horizontal"    android:paddingTop="@dimen/dp8"    android:paddingBottom="@dimen/dp8">    <LinearLayout        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_gravity="center_vertical"        android:layout_marginStart="@dimen/dp12"        android:layout_weight="1"        android:orientation="vertical">        <TextView            android:id="@+id/tv_name"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:gravity="center_vertical"            android:textColor="@color/base_primaryText"            android:textSize="@dimen/base_secondaryTextSize" />        <TextView            android:id="@+id/tv_ids"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:gravity="center_vertical"            android:textColor="@color/base_secondaryText"            android:textSize="@dimen/base_tertiaryTextSize" />    </LinearLayout>    <TextView        android:id="@+id/tv_selected"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center_vertical"        android:text="@string/core_usb_state_bound"        android:textColor="@color/base_colorPrimary"        android:textSize="@dimen/base_secondaryTextSize" /></LinearLayout>