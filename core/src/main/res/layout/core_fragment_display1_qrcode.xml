<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base_card_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp40"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/lottie_display1_qrcode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginBottom="@dimen/dp32"
        android:text="@string/core_presentation_waiting_qrcode"
        android:textColor="@color/base_secondaryText" />


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        app:dividerColor="@color/base_divider" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_primary_button_height"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/base_exit"
        android:textColor="@color/base_secondaryText"
        android:textSize="@dimen/core_display1_text_size" />
</LinearLayout>