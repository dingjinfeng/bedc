<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_background"
    android:paddingStart="@dimen/dp8"
    android:paddingTop="@dimen/dp15"
    android:paddingEnd="@dimen/dp8">

    <TextView
        android:id="@+id/tv_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/base_secondaryTextSize" />

    <TextView
        android:id="@+id/tv_info_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/tv_info_title"
        android:gravity="end"
        android:textColor="@color/base_secondaryText"
        android:textSize="@dimen/base_secondaryTextSize" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_info_content"
        android:layout_marginTop="@dimen/dp15"
        app:dividerColor="@color/base_divider" />
</RelativeLayout>